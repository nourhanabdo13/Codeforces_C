#include <stdio.h>
unsigned int n = 0;
unsigned int k = 0;
unsigned int i = 0;
unsigned int a[50];
unsigned int counter = 0;
 
int main()
{
    scanf("%i%i",&n,&k);
    for(i = 1;i <= n;i++)
    {
        scanf("%i",&a[i]);
    }
    for(i = 1;i <= n;i++)
    {
        if((a[i] >= a[k])&&(a[i] != 0))
        {
            counter++;
        }
    }
    printf("%i",counter);
    return 0;
}
