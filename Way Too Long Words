#include <stdio.h>
#include <string.h>
unsigned int n = 0;
unsigned int i;
char word[100];
int main()
{
    scanf("%i",&n);
    for(i = 0;i < n;i++)
    {
        scanf("%s",word);
        unsigned int length = strlen(word);
        if(length <= 10)
        {
            printf("%s \n",word);
        }
        else
        {
            printf("%c%i%c \n",word[0],(length - 2),word[length - 1]);
        }
    }
    return 0;
}
